<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize the action bar color -->
        <item name="colorPrimary">#333333</item>
        <item name="android:background">#006060</item>
        <item name="colorPrimaryDark">#005050</item>
        <!-- Customize the text color of the action bar -->
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="Theme.Safbot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Safbot.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Safbot.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Safbot.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <!-- Customize the color of the progress track -->
        <item name="colorControlNormal">#FF0000</item> <!-- Replace #FF0000 with your desired color code -->

        <!-- Customize the color of the thumb (the draggable circle) -->
        <item name="colorControlActivated">#00FF00</item> <!-- Replace #00FF00 with your desired color code -->
    </style>

</resources>